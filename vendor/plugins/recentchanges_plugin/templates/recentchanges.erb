<table cellpadding="0" cellspacing="0" class="recentchanges">
  <% days_changes.each do |day, changes| %>
    <tr>
	  <th><%=l Time.parse(day), :format => :date %></th>
	  <th></th>
	  <th></th>
	  <th></th>
	</tr>
	<% changes = changes.sort { |a,b| b.revision.date <=> a.revision.date } %>
	<% changes.each do |change| %>
	  <tr>
		<% if change.attachment.nil? %>
		  <% if change.revision.deleted? %>
		    <td><%=h(namespaces.length == 1 ? change.page : "#{change.namespace}/#{change.page}") %></td>
		  <% else %>
		    <td><%=link_to h(namespaces.length == 1 ? change.page : "#{change.namespace}/#{change.page}"), {:controller => 'page', :action => 'view', :namespace => change.namespace, :page => h(change.page), :revision => h(change.revision.id)} %></td>
		  <% end %>
		<% else %>
		  <% if change.revision.deleted? %>
		    <td><%=h(namespaces.length == 1 ? "#{change.page}/#{change.attachment}" : "#{change.namespace}/#{change.page}/#{change.attachment}") %></td>
		  <% else %>
		    <td><%=link_to h(namespaces.length == 1 ? "#{change.page}/#{change.attachment}" : "#{change.namespace}/#{change.page}/#{change.attachment}"), {:controller => 'page', :action => 'attachment', :namespace => change.namespace, :page => h(change.page), :attachment => h(change.attachment), :revision => h(change.revision.id)} %></td>
		  <% end %>
		<% end %>
		<td><%=l change.revision.date, :format => :time %></td>
		<td><%=link_to h(change.revision.user.username), {:controller => 'page', :action => 'view', :namespace => Raki.userpage_namespace, :page => h(change.revision.user.username)} %></td>
		<td><%=h change.revision.message %></td>
	  </tr>
	<% end %>
  <% end %>
</table>