<div id="controls_left">
  <%=link_to t('page.tab.view'), @page.url(:view), :class => (action_name=='view' ? 'active' : 'inactive') %>
  <% if @page.authorized?(User.current, :view) && @page.exists? %>
    <%=link_to t('page.tab.attachments'), @page.url(:attachments), :class => (action_name=~/^attachment/ ? 'active' : 'inactive') %>
    <%=link_to t('page.tab.info'), @page.url(:info), :class => (action_name=~/^(info|diff)$/ ? 'active' : 'inactive') %>
  <% end %>
</div>
<div id="controls_right">
  <% if @page.exists? && @page.authorized?(User.current, :edit) || !@page.exists? && @page.authorized?(User.current, :create) || @page.authorized?(User.current, :rename) || @page.authorized?(User.current, :delete) %>
    <%=link_to t('page.tab.edit'), @page.url(:edit), :class => (action_name=~/^(edit|update|delete|rename|preview)$/ ? 'active' : 'inactive') %>
  <% end %>
</div>