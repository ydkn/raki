<% if authorized?(@namespace, @page, :view) && page_exists?(@namespace, @page, @revision) %>
  <% current_revision = page_revisions(@namespace, @page).first %>
  <%=t 'page.footer',
    :date => l(current_revision.date, :format => :full),
    :user => link_to((h current_revision.user.display_name), current_revision.user.page_url),
    :version => h(current_revision.version)
  %>
<% end %>
<% if @namespace && @page && authorized?(@namespace, @page, :view) %>
  <%=link_to image_tag('feed.png', :alt => 'Feed'), { :controller => 'feed', :action => 'page', :namespace => h(@namespace), :page => h(@page)}, {:title => t('feed.page', :namespace => h(@namespace), :page => h(@page)), :class => 'feed'} %>
<% end %>