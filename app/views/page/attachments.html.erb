<h2><%=t 'attachment.list' %></h2>
<table id="revisions" cellspacing="0" cellpadding="0">
  <thead>
    <tr>
      <th><%=t 'attachment.name' %></th>
      <th><%=t 'attachment.size' %></th>
      <th><%=t 'attachment.version' %></th>
      <th><%=t 'attachment.date' %></th>
      <th><%=t 'attachment.user' %></th>
      <th><%=t 'attachment.message' %></th>
      <th><%=t 'attachment.actions' %></th>
    </tr>
  </thead>
  <tbody>
    <% cnt = 0 %>
    <% @attachments.each do |attachment| %>
      <tr class="<%=((cnt+=1)%2==0) ? 'even' : 'odd' %>">
        <td><%=link_to h(attachment[:name]), :controller => 'page', :action => 'attachment', :namespace => h(@namespace), :page => h(@page), :attachment => h(attachment[:name]) %></td>
        <td><%=h format_filesize(attachment[:revision].size) %></td>
        <td class="version"><%=link_to attachment[:revision].version, :controller => 'page', :action => 'attachment_info', :namespace => h(@namespace), :page => h(@page), :attachment => h(attachment[:name]) %></td>
        <td><%=l attachment[:revision].date, :format => :full %></td>
        <td><%=link_to h(attachment[:revision].user.username), attachment[:revision].user.page_url %></td>
        <td><%=h attachment[:revision].message %></td>
        <td><input type="button" value="<%=t 'attachment.delete' %>" onclick="javascript:location.href='<%=url_for :controller => 'page', :action => 'delete', :namespace => h(@namespace), :page => h(@page), :attachment => h(attachment[:name]) %>';" /></td>
      </tr>
    <%  end %>
  </tbody>
</table>
<% if authorized?(@namespace, @page, :upload) %>
  <br/>
  <% form_tag({:controller => 'page', :namespace => h(@namespace), :page => h(@page), :action => 'attachment_upload'}, {:enctype => 'multipart/form-data'}) do %>
    <div>
      <label for="attachment-file"><%=t 'attachment.upload.file' %></label>
      <input id="attachment-file" name="attachment_upload" size="30" type="file" />
    </div>
    <div>
      <label for="attachment-message"><%=t 'attachment.upload.message' %></label>
      <input type="text" id="attachment-message" name="message" />
    </div>
    <input type="submit" value="<%=t 'attachment.upload.save' %>" />
  <% end %>
<% end %>