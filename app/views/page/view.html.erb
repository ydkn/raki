<% if !authorized? @type, @page, :view %>
  <div class="warning">
    <%=t 'page.no_permission' %>
  </div>
<% elsif page_exists? @type, @page %>
  <%=insert_page @type, @page, @revision %>
<% else %>
  <div class="information">
    <%=t 'page.not_exists.msg' %>
    <% if authenticated? %>
      <%=t 'page.not_exists.edit_msg', :edit_link => link_to(t('page.not_exists.edit_link'), {:controller => 'page', :action => 'edit', :type => h(@type), :id => h(@page)}) %>
    <% end %>
  </div>
<% end %>